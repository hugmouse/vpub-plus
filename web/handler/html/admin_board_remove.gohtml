{{ define "content" }}

    {{ if .errorMessage }}
        <p class="errors">{{ .errorMessage }}</p>
    {{ end }}

    Are you sure you want to delete the following board?
    <p>{{ .board.Name }}</p>
    <form action="/admin/boards/{{ .board.ID }}/remove" method="post">
        {{ .csrfField }}
        <input type="submit" value="Submit">
    </form>
{{ end }}